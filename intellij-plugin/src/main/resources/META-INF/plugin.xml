<idea-plugin>
    <id>com.guet.flexbox.handshake</id>
    <name>handshake</name>
    <version>1.0.5</version>
    <vendor email="imlkluo@qq.com"
        url="https://github.com/sanyuankexie/Gbox">sanyuankexie
    </vendor>
    <description><![CDATA[
      ðŸš€Android high performance dynamic business container based on litho solves the pain point of dynamic homepage. Released under the Apache 2.0 open source protocol, it is an open source software based on open source software.
    ]]></description>
    <change-notes><![CDATA[
      ðŸš€Android high performance dynamic business container based on litho solves the pain point of dynamic homepage. Released under the Apache 2.0 open source protocol, it is an open source software based on open source software.
    ]]>
    </change-notes>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="193.5662.53"/>
    <actions>
        <!-- Add your actions here -->
        <action id="com.guet.flexbox.handshake.new.flexml"
            class="com.guet.flexbox.handshake.action.NewFlexmlAction"
            text="Flexml File"
            description="New flexml dsl file">
            <add-to-group group-id="NewGroup"
                anchor="before"
                relative-to-action="NewFile"/>
        </action>
        <action id="com.guet.flexbox.handshake.new.package"
            class="com.guet.flexbox.handshake.action.NewPackageAction"
            text="Flexml Mock Package"
            description="New Flexml mock package json file">
            <add-to-group group-id="NewGroup"
                anchor="before"
                relative-to-action="NewFile"/>
        </action>
    </actions>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.xml</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.json</depends>
    <extensions defaultExtensionNs="com.intellij">
        <configurationType
            implementation="com.guet.flexbox.handshake.configuration.type.CompileConfigurationType"/>
        <configurationType
            implementation="com.guet.flexbox.handshake.configuration.type.MockConfigurationType"/>
        <runConfigurationProducer
            implementation="com.guet.flexbox.handshake.configuration.producer.CompileRunConfigurationProducer"/>
        <runConfigurationProducer
            implementation="com.guet.flexbox.handshake.configuration.producer.MockRunConfigurationProducer"/>
        <runLineMarkerContributor language="JSON"
            order="after applicationRunLineMarkerProvider"
            implementationClass="com.guet.flexbox.handshake.runline.MockRunLineMarkerContributor"/>
        <runLineMarkerContributor language="XML"
            order="after applicationRunLineMarkerProvider"
            implementationClass="com.guet.flexbox.handshake.runline.CompileRunLineMarkerContributor"/>
        <internalFileTemplate name="package"/>
        <internalFileTemplate name="flexml_file"/>
        <internalFileTemplate name="host"/>
        <xml.tagNameProvider
            implementation="com.guet.flexbox.handshake.completion.FlexmlComponentNameProvider"/>
        <completion.contributor language="XML"
            implementationClass="com.guet.flexbox.handshake.completion.FlexmlCompletionContributor"/>
        <fileType name="flexml"
            implementationClass="com.guet.flexbox.handshake.filetype.FlexmlFileType"
            fieldName="INSTANCE"
            language="XML"
            extensions="xml;flexml"/>
    </extensions>
</idea-plugin>