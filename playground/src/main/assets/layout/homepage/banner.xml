<?xml version="1.0" encoding="utf-8"?>
<Flex
    alignItems="center"
    justifyContent="center"
    width="360">
    <Banner
        borderRadius="12"
        height="150"
        width="340">
        <for var="index" from="0" to="${urls.size()-1}">
            <Image
                clickUrl="${url}"
                width="340"
                flexGrow="1"
                scaleType="centerCrop"
                url="${urls[index]}" />
        </for>
    </Banner>
</Flex>