<?xml version="1.0" encoding="utf-8"?>
<Flex
    justifyContent="center">
    <Flex
        marginTop="5"
        marginBottom="5"
        clickUrl="${url}"
        paddingRight="10"
        paddingLeft="10"
        background="#FFFFFF"
        borderRadius="12"
        flexDirection="column"
        width="340">
        <Flex
            marginTop="20"
            flexDirection="row">
            <Image
                scaleType="centerCrop"
                borderRadius="300"
                width="35"
                height="35"
                url="https://s2.ax1x.com/2019/12/29/lu7jOS.gif">
            </Image>
            <Flex
                marginLeft="10"
                flexDirection="column">
                <Flex flexDirection="row">
                    <Text
                        textSize="13"
                        textStyle="bold"
                        text="花花公子旗舰店">
                    </Text>
                    <Text
                        textColor="#FFFFFF"
                        height="16"
                        horizontalGravity="center"
                        verticalGravity="center"
                        borderRadius="7"
                        textSize="12"
                        background="${res:gradient('l2r','#6200ea','#d500f9')}"
                        marginLeft="10"
                        text="  直播中  ">
                    </Text>
                </Flex>
                <Text
                    textSize="12"
                    text="品牌官方店">
                </Text>
            </Flex>
        </Flex>
        <Text
            textColor="#80000000"
            textSize="12"
            marginTop="10"
            text="${text}">
        </Text>
        <Flex
            marginTop="5"
            justifyContent="center">
            <Flex
                flexDirection="column"
                marginBottom="10"
                borderRadius="10">
                <for var="index" from="0" to="${images.size()/3-1}">
                    <Flex
                        marginBottom="${index!=(images.size()/3-1)?2:0}"
                        flexDirection="row"
                        height="105">
                        <Image
                            scaleType="fitXY"
                            width="105"
                            height="105"
                            url="${images[index*3]}">
                        </Image>
                        <Image
                            scaleType="fitXY"
                            marginRight="2"
                            marginLeft="2"
                            width="105"
                            height="105"
                            url="${images[index*3+1]}">
                        </Image>
                        <Image
                            scaleType="fitXY"
                            width="105"
                            height="105"
                            url="${images[index*3+1]}">
                        </Image>
                    </Flex>
                </for>
            </Flex>
        </Flex>
        <Flex
            marginBottom="15"
            flexDirection="row">
            <Text
                textSize="12"
                text="10000阅读"
                alignSelf="flexStart">
            </Text>
            <Flex flexGrow="1">
            </Flex>
            <Flex
                alignItems="center"
                flexDirection="row">
                <Image
                    visibility="${!clicked?visible:gone}"
                    onClick="${()->{pageContext.refresh().with(()->{clicked=!clicked}).commit()}}"
                    width="20"
                    height="20"
                    url="https://s2.ax1x.com/2019/12/29/luvy2d.png">
                </Image>
                <Text
                    horizontalGravity="center"
                    verticalGravity="center"
                    textSize="15"
                    text="7"
                    marginLeft="3"
                    marginRight="20">
                </Text>
                <Image width="20" height="20" url="https://s2.ax1x.com/2019/12/29/luvbMn.png">
                </Image>
                <Text
                    horizontalGravity="center"
                    verticalGravity="center"
                    textSize="15"
                    text="7"
                    marginRight="2"
                    marginLeft="3">
                </Text>
            </Flex>
        </Flex>
    </Flex>
</Flex>